# TechWatchIT - Variables d'environnement
# Copier ce fichier vers .env et remplir les valeurs réelles

# Configuration OpenAI
# Obtenez votre clé sur : https://platform.openai.com/api-keys
# Format attendu : sk-proj-... ou sk-...
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
# Modèles recommandés selon budget (60 articles/semaine) :
# gpt-4o-mini      -> $0.025/semaine (~0.10€) - Économique pour tests
# gpt-4.1-mini     -> $0.066/semaine (~0.30€) - Production
# gpt-4.1          -> $0.330/semaine (~1.50€) - Entreprise

# Configuration SMTP Office 365
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=votre.email@entreprise.com
SMTP_PASSWORD=votre_mot_de_passe_app
SMTP_FROM_NAME=TechWatchIT Alert System

# Configuration base de données SQLite (fallback)
DATABASE_PATH=./data/database.db

# Configuration MySQL pour TEST-WAMP
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=techwatchit

# Configuration API
API_HOST=localhost
API_PORT=5000
API_DEBUG=True

# Configuration des alertes
ALERT_THRESHOLD_CVSS=9.0
DAILY_DIGEST_TIME=08:00
ALERT_RECIPIENTS=admin@entreprise.com,security@entreprise.com

# Configuration logs
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Configuration des flux RSS (délai en secondes)
FETCH_INTERVAL=3600
MAX_ARTICLES_PER_FEED=50

# Configuration serveur web
WEB_SERVER_HOST=localhost
WEB_SERVER_PORT=8080 